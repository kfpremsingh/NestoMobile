
<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="com.neologix.nesto"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

        
        <preference name="orientation" value="portrait" />
        <preference name="fullscreen" value="true" /> 
        <preference name="target-device" value="universal" />
        <preference name="deployment-target" value="7.0" />
        
        
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="SplashScreenDelay" value="10000"/>
        <gap:plugin name="org.apache.cordova.splashscreen" />
       <gap:plugin name="org.li8.inappbrowser" version="0.1" />
       
        
    <name>NESTO</name>
    <description>
        NESTO
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
       NESTO
    </author>
        
        <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
      </array>

	
	
	 
        
                    <!-- iPhone and iPod touch -->
            <gap:splash src="images/splash/IOS/320x480.png" gap:platform="ios" width="320" height="480" />
            <gap:splash src="images/splash/IOS/640x960.png" gap:platform="ios" width="640" height="960" />

            <!-- iPhone 5 / iPod Touch (5th Generation) -->
            <gap:splash src="images/splash/IOS/640x1136.png" gap:platform="ios" width="640" height="1136" />

          

	<!-- Splash screen Android-->
	<gap:splash src="images/splash/Android/drawable-xhdpi/splash.png" gap:platform="android" gap:density="ldpi" />
	<gap:splash src="images/splash/Android/drawable-mdpi/splash.png" gap:platform="android" gap:density="mdpi" />
	<gap:splash src="images/splash/Android/drawable-hdpi/splash.png" gap:platform="android" gap:density="hdpi" />
	<gap:splash src="images/splash/Android/drawable-xhdpi/splash.png" gap:platform="android" gap:density="xhdpi" />
	
	
	 <!-- icon screen ios-->
	<icon src="images/icon.png" gap:platform="ios" width="114" height="114" />
	
	<!-- icon screen Android-->
	<icon src="images/icon.png" gap:platform="android" gap:density="xhdpi" />
	
	
	
	
	
	</widget>
